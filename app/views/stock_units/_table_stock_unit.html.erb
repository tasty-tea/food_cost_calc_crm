<table class="table">
  <thread>
    <h1><%= t('.stock_unit')%>:<h2>
  </thread>
  <tbody>
    <tr>
      <td width="100px"><%= t('.name') %></td>
      <td><%= @stock_unit.name %>  </td>   
    </tr>
    <tr>
      <td><%= t('.cost') %></td>
      <td><%= @stock_unit.cost %>  </td>
    </tr>
    <tr>
      <td><%= t('.amount') %></td>
      <td><%= StockUnits::CalcAmount.call(@stock_unit.id).object %>  </td>
    </tr>
    <tr>
      <td><%= t('.rejected') %></td>
      <td><%= @stock_unit.rejected %>  </td>
    </tr>
    <tr>
      <td><%= t('.measure_units') %></td>
      <td><%= @stock_unit.measure_units %>  </td>
    </tr>
  </tbody>
</table>