<div class="container">
  <p>
    <h2><strong><%= t('.stock_units_list') %></strong></h2>
  </p>

  <p>
      <strong><%= t('model.stock_units.many') %>:</strong>
      <% if @stock_units.nil? %>
        <%= t('list_is_empty') %>
      <% else %>
        <table class="table">
          <thread>
            <tr>
              <td width="100px"><%= t('id') %></td>
              <td width="200px"><%= t('name') %></td>
              <td width="100px"><%= t('edit') %></td>
              <td><%= t('destroy') %></td>
            </tr>
        </thread>
          <tbody>
            <% @stock_units.each do |stock_unit| %>
              <tr>
                <td><%= stock_unit.id %></td>
                <td><%= link_to "#{stock_unit.name}", stock_unit_path(stock_unit) %></td>
                <td><%= button_to t('edit'), edit_stock_unit_path(stock_unit), :method => :get %></td>
                <td><%= button_to t('delete'), stock_unit_path(stock_unit), :method => :delete, data: {confirm: t('ensure_action')} %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    <% end %>
  </p>

  <div>
    <%= link_to t('new'), new_stock_unit_path() %> </br>
    <%= link_to t('back'), root_path() %>
  </div>
</div>